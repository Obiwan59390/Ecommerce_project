{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<form method="post" class="mx-auto text-center bordered border-blue p-2" style="width: 800px;">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté {{ app.user.prenom }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal text-center"><u>Merci de vous connecter:</u></h1>
    <label for="inputEmail" class="label mb-3"><u>Adresse éléctronique:</u></label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control text-center p-2" autocomplete="email" required autofocus>
    <label for="inputPassword" class="label my-3"><u>Mot de passe : </u></label>
    <input type="password" name="password" id="inputPassword" class="form-control text-center" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary my-2" type="submit">
       <u> Se connecter </u>
    </button>
</form>

{% endblock %}
